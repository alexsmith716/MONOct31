                    br.mobile-only

                    br.mobile-only


                  .col-md-5.col-md-offset-1.col-sm-6.col-xs-6
                    span.title-footer Connect

                    hr.under

                    a(href="") Facebook
                    br

                    a(href="") Twitter
                    br

                    a(href="") Yelp
                    br

                    a(href="") Events
