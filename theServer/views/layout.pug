include mixins/mixins

doctype html

html(lang="en-US")

  head
  
    title= title

    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    block metas
    
    link(href='data:image/x-icon;', type='image/x-icon', rel='shortcut icon') 
    intercept-url(pattern="/favicon.ico" access="ROLE_ANONYMOUS")
    link(href='/stylesheets/application.css', rel='stylesheet')
    <!-- link(href='/stylesheets/content.css', rel='stylesheet') -->
    <!-- link(href='/stylesheets/main.css', rel='stylesheet') -->
    script(src='/javascripts/jQuery.min.v2.2.4.js')

    block links
  
    block headScripts

  body

    .wrapper

      header
        .header

          .navbar.navbar-default
            .container

              .navbar-header
                button.navbar-toggle.collapsed(data-toggle='collapse' data-target='.navbar-collapse' aria-expanded='false')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.brand(href='/', data-toggle='collapse' data-target='.navbar-collapse.in')
                  img(width="225" src="/images/logo-2016-2.png")
          
              if currentUser
                - var username = currentUser.name()

              .collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right


                  li 
                    a.navbar-link(href='/membersonly', data-toggle='collapse', data-target='.navbar-collapse.in') Members Only!
                  li 
                    a.navbar-link(href='/resources', data-toggle='collapse', data-target='.navbar-collapse.in') Resouces

                  if currentUser
                    li
                      a(href="/userprofile") Hello, #{username}
                    li 
                      a.signup-link(href='/comments', data-toggle='collapse', data-target='.navbar-collapse.in') Comments
                    li 
                      a.login-link(href='/logout', data-toggle='collapse', data-target='.navbar-collapse.in') Log Out

                  else
                    li 
                      a.login-link(href='/login', data-toggle='collapse', data-target='.navbar-collapse.in') Log In
                    li 
                      a.signup-link(href='/signup', data-toggle='collapse', data-target='.navbar-collapse.in') Sign Up
      


      .view
        block content


      footer
        .footer
          br
          .container
            .row
              .col-md-2.col-sm-12.col-xs-12
